root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.{html,css,scss,js,jsx,json,ts,tsx,md}]
indent_size = 2

[Makefile]
indent_size = 8
indent_style = tab
insert_final_newline = false

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[*.{ts, tsx, js, jsx}]
quote_type = single

[COMMIT_EDITMSG]
max_line_length = 0
